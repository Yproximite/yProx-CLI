{
  "extends": ["tslint-config-airbnb", "tslint-plugin-prettier"],
  "rules": {
    "prettier": true,
    // Disable Airbnb formatting rules, prettier will take care of formatting
    "import-name": false,
    "max-line-length": false,
    "trailing-comma": false,
    "align": false,
    "ter-arrow-parens": false
  },
  "linterOptions": {
    "exclude": ["dist", "test-app"]
  }
}
